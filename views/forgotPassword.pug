extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Please input the email of the account you would like to recover
            form#password-recovery-form.form.form--login
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                .form__group
                    button.btn.btn--green Send password reset token